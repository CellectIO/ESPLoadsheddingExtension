{
  "manifest_version": 3,
  "name": "ShedWise",
  "description": "A chrome extension that utilizes the ESP (EskomSePush) Loadshedding API's",
  "version": "1.0.3",
  "permissions": [
    "geolocation"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/images/logos/esp-logo-3.png",
    "content_security_policy": [
      "script-src 'self' https://fonts.googleapis.com; object-src 'self'",
      "script-src 'self' https://developer.sepush.co.za; object-src 'self'"
    ]
  },
  "icons": {
    "16": "assets/images/logos/esp-logo-3.png",
    "32": "assets/images/logos/esp-logo-3.png",
    "48": "assets/images/logos/esp-logo-3.png",
    "128": "assets/images/logos/esp-logo-3.png"
  },
  "host_permissions": [
    "https://developer.sepush.co.za/business/2.0/*"
  ]
}